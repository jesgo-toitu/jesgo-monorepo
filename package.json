{
  "name": "jesgo-monorepo",
  "version": "1.4.0",
  "description": "JESGO - 医療情報システム（モノレポ版）",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "install:all": "npm install --workspaces",
    "clean": "npm run clean --workspaces",
    "build": "npm run build --workspaces",
    "dev": "npm run build:common && concurrently \"npm run dev:common\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:common": "npm run dev-start --workspace=packages/common",
    "dev:frontend": "npm run dev-start --workspace=packages/frontend",
    "dev:backend": "npm run dev-start --workspace=packages/backend",
    "build:common": "npm run build --workspace=packages/common",
    "start": "npm run start --workspaces",
    "start:frontend": "npm run start --workspace=packages/frontend",
    "start:backend": "npm run start --workspace=packages/backend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "fmt": "npm run fmt --workspaces",
    "test": "npm run test --workspaces",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:health": "bash scripts/dev-health-check.sh",
    "deploy:windows": "powershell -File ./scripts/deploy-windows.ps1",
    "release:build": "npm run build --workspaces && npm run release:package",
    "release:package": "node scripts/package-release.js",
    "generate:keys": "bash scripts/generate-keys.sh",
    "generate:keys:windows": "scripts\\generate-keys.bat"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "archiver": "^6.0.1",
    "fs-extra": "^11.2.0"
  },
  "keywords": [
    "medical",
    "healthcare",
    "jesgo",
    "monorepo"
  ],
  "author": "JESGO Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/jesgo-monorepo.git"
  }
}
