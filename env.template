# JESGO Development Environment Variables
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jesgo_db
DB_USER=postgres
DB_PASSWORD=12345678

# Backend Configuration
# バックエンドAPIのポート番号（Docker/npm run dev共通）
# 注意: macOSのAirPlay Receiverが5000番ポートを使用するため8000を使用
PORT=8000
BACKEND_HOST=localhost

# Frontend Configuration
# フロントエンドのポート番号（Docker/npm run dev共通）
FRONTEND_PORT=3000
# バックエンドAPIのエンドポイントURL
REACT_APP_API_URL=http://localhost:8000

# Security Configuration
PASSWORD_SALT=abcde
HASH_SALT=3^0g#H-x$M

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Docker Configuration (for docker-compose)
POSTGRES_DB=jesgo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=12345678
